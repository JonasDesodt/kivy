#:import PlaylistScreen views.playlist_screen.PlaylistScreen
#:import SuggestionlistScreen views.suggestionlist_screen.SuggestionlistScreen
#:import TracklistScreen views.tracklist_screen.TracklistScreen
#:import CreateTrackScreen views.create_track_screen.CreateTrackScreen

<MainScreen>:
    id: main_screen

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: 1
            
            ScreenManager:
                id: main_screen_manager

                PlaylistScreen:
                    name: 'playlist'

                TracklistScreen:
                    name: 'tracklist'

                SuggestionlistScreen:
                    name: 'suggestionlist'

                CreateTrackScreen:
                    name: 'createTrack'

        BoxLayout:
            height: self.minimum_height
            size_hint_y: None
            orientation: 'horizontal'

            Button:
                text: 'Playlist'
                on_release: root.switch_screen('playlist')

            Button:
                text: 'Tracklist'
                on_release: root.switch_screen('tracklist')

<PlaylistScreen>:
    on_pre_enter: playlist_view.refresh_recycleview()

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1
    
        PlaylistView:
            id: playlist_view

            size_hint_y: 1 

<TracklistScreen>:
    on_pre_enter: tracklist_view.refresh_recycleview()

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1

        Button:
            text: 'Add track'

            on_release: app.root.switch_screen('createTrack')

        TextInput:
            id: filter_input
            hint_text: "Filter by artist, title, or record"
            size_hint_y: None
            height: '40dp'

            on_text: tracklist_view.filter_tracks(self.text)

        TracklistView:
            id: tracklist_view  
            size_hint_y: 1 

<SuggestionlistScreen>
    on_pre_enter: 
        self.fetch()
        suggestionlist_view.data = self.data

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 1

        Button: 
            text: 'Add suggestion'

        SuggestionlistView:
            id: suggestionlist_view
            data: root.data

            size_hint_y: 1 

<CreateTrackScreen>
    CreateTrackView:

<Button>:
    height: self.texture_size[1]
    padding: (5, 5)
    size_hint_y: None

<Label>:
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<TracklistView>:
    viewclass: 'TracklistItem'  

    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        padding: (10, 10)
        spacing: 10  

<TracklistItem>:
    track_id: root.track_id
    artist: root.artist
    title: root.title
    record: root.record

    orientation: 'vertical'

    Label:
        text: f"Artist: {root.artist}"
    
    Label:
        text: f"Title: {root.title}"
    
    Label:
        text: f"Record: {root.record}"

    BoxLayout:
        orientation: 'horizontal'

        Button:
            text: 'Add to playlist'
            size_hint: (None, None) 
            size: '150dp', '40dp'

            on_release: root.add_to_playlist(root)

        Button:
            text: 'Delete'
            size_hint: (None, None) 
            size: '150dp', '40dp'

            on_release: root.delete_track(root.track_id)
        
<PlaylistView>:
    viewclass: 'PlaylistItem'

    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        padding: (10, 10)
        spacing: 10  

<PlaylistItem>:
    artist: root.artist
    title: root.title
    record: root.record

    orientation: 'vertical'

    Label:
        text: f"Artist: {root.artist}"      

    Label:
        text: f"Title: {root.title}"

    Label:
        text: f"Record: {root.record}"

    BoxLayout:
        orientation: 'horizontal'

        Button
            text: 'Remove'

            on_release: root.remove_from_playlist(root)

        Button 
            text: 'Suggestions'

            on_release: app.root.switch_screen('suggestionlist', root.track_id)

<SuggestionlistView>:
    data: root.data
    viewclass: 'SuggestionlistItem'

    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        padding: (10, 10)
        spacing: 10  

<SuggestionlistItem>
    artist: root.artist
    title: root.title
    record: root.record

    orientation: 'vertical'

    Label:
        text: f"Artist: {root.artist}"      

    Label:
        text: f"Title: {root.title}"

    Label:
        text: f"Record: {root.record}"

    Button:
        text: 'Add to playlist'

        on_release: root.add_to_playlist(root)

<CreateTrackView>:
    orientation: 'vertical'
    size_hint_y: 1

    Label:
        text: "Create track"

    GridLayout:
        cols: 2
        spacing: 10
        height: self.minimum_height

        Label:
            text: "Artist:"
        TextInput:
            id: artist_input

        Label:
            text: "Title:"
        TextInput:
            id: title_input

        Label:
            text: "Record:"
        TextInput:
            id: record_input    
    Button:
        text: "Submit"

        on_release: root.create_track(artist_input.text, title_input.text, record_input.text)
    
